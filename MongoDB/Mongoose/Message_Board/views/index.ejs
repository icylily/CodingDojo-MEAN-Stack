<!DOCTYPE html>
<html style="height: 100%; width: 100%;">

<head>
    <title>Quoting Dojo!</title>
    <script src="http://ajax.googleapis.com/ajax/libs/jquery/1.11.1/jquery.min.js"></script>
    
    <link rel="stylesheet" href="../stylesheets/bootstrap.min.css">
    
    <title>Message Dashboard</title>
</head>

<body class="bg-light">
    <div class="container">

        <div class="row blog-header flex-nowrap  my-2">
            <div class="col pt-1">
                <!-- <a class="text-muted" href="#">Start-here</a> -->
            </div>
            <div class="col-8 pt-1">
                <h1>Message Dashboard!</h1>
            </div>
            <div class="col pt-1">
                <div class="col-4 d-flex justify-content-end align-items-center">
                    <!-- <a class="btn btn-sm btn-outline-secondary" href="#"></a> -->
                </div>
            </div>
        </div>
        <div class="row">
            <!-- tip to easily see objects printed in full instead of [object Object] -->
            <%- JSON.stringify(messages) %>
            <!-- based on the structure of your messages, determine how to display them -->
            <% if(messages.registration) { %>
            <% for (var x of messages.registration) { %>
            <h3><%= x %></h3>
            <% } %>
            <% } %>
        <form action="/add_message" method="POST">
            <div class="form-group ">
                <label for="name">Name:</label>
                <input type="text" name="name">
            </div>
            <div class="form-group">
                <label for="message">Message:</label>
                <textarea name="message" id="" cols="100" rows="3"></textarea>
        
            </div>
            <button type="submit" class="btn btn-primary" name="submit">Post Message!</button>
        </form>
        </div>
    <% for (var i in info) { %>
    
        <div class="col-md-10">
            <div class="card flex-md-row mb-4 box-shadow h-md-250">
                <div class="card-body d-flex flex-column align-items-start">
                    <h3> <%= info[i].name %> </h3> <br>
                    <h5>
                        <%= info[i].message %> </h5><br>
                </div>
            </div>
        </div>
    
    <% if (info[i].comments) { %>
    <!-- <%=info[i].comments%> -->
    <% for (var j=0;j< info[i].comments.length;j++) { %>
        <div class="row text-right mt-3">
            <p>Name: <%= info[i].comments[j].name %></p>  &nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;
            <br>
            <p>Comment: <%= info[i].comments[j].comment %></p> <br>
        </div>
    <% } %>
    
    <% } %>
    <div class="text-right">
    <form action="/add_comment/<%= info[i]._id %> " method="POST">
        <div class="form-group text-right">
            <label for="name">Name:</label>
            <input type="text" name="name">
        </div>
        <div class="form-group text-right font-small">
            <label for="comment">Comment:</label>
            <textarea name="comment" id="" cols="100" rows="1"></textarea>
    
        </div>
        <button type="submit" class="btn btn-primary text-right" name="submit">Post Comment!</button>
    </form>
    </div>
    
    
    <% } %>

    </div>
</body>    
    

   

</html>